{
  "manifest_version": 3,
  "name": "Employee Activity Tracker",
  "version": "1.0",
  "description": "Theo dõi giờ làm và comment Facebook của nhân viên.",
  "permissions": [
    "scripting", 
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content_script.js"]
    },
    {
      "matches": ["https://www.facebook.com/help/contact/*"],
      "js": ["unblock-content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["admin.html"],
      "matches": ["<all_urls>"]
    }
  ]
}